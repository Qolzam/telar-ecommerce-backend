# E-commerce Backend Environment Configuration
# Copy this file to .env for local development
# Set these in Render environment variables for production

# Server Configuration
PORT=8088
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Authentication Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
RESET_TOKEN_TTL_MINUTES=15

# Email Configuration
SENDER_EMAIL=noreply@yourdomain.com
EMAIL_PASSWORD=your_email_password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
MAIL_FROM=noreply@yourdomain.com

# Payment Gateway Integration
BANK_GATEWAY_URL=https://your-bank-gateway.onrender.com
BANK_GATEWAY_WEBHOOK_SECRET=your_webhook_secret_here

# Frontend URLs (for CORS and redirects)
FRONTEND_URL=https://your-frontend.vercel.app
FRONTEND_SUCCESS_URL=https://your-frontend.vercel.app/payment-success
FRONTEND_FAILURE_URL=https://your-frontend.vercel.app/payment-failure
FRONTEND_CANCELLED_URL=https://your-frontend.vercel.app/payment-cancelled

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=5000

# Logging Configuration
LOG_LEVEL=info

# Development overrides (only for local development)
# Uncomment and modify these for local development
# FRONTEND_URL=http://localhost:5173
# FRONTEND_SUCCESS_URL=http://localhost:5173/payment-success
# FRONTEND_FAILURE_URL=http://localhost:5173/payment-failure
# FRONTEND_CANCELLED_URL=http://localhost:5173/payment-cancelled
# BANK_GATEWAY_URL=http://localhost:4000
